{
	"name": "normative",
	"version": "1.0.0",
	"description": "Desktop app for developing a legal dictionary and managing legal terminology, built with TypeScript, Electron, Firebase and MongoDB.",
	"main": "build/main.js",
	"scripts": {
		"test": "jest --verbose --maxWorkers=1 --coverage --silent",
		"client": "tsc && electron build/client/Client.js",
		"dev-client": "tsc-watch --onSuccess \"electron build/client/Client.js\"",
		"css": "postcss client/css/tailwind.css -o build/client/css/tailwind.css",
		"log:entry:eng": "tsc && node build/main.js --language English --retrieveEntry",
		"log:entry:spa": "tsc && node build/main.js --language Spanish --retrieveEntry",
		"debug": "tsc && node build/main.js",
		"conv:eng": "tsc && node build/main.js --convert single --language English",
		"conv:spa": "tsc && node build/main.js --convert single --language Spanish",
		"del:json:eng": "tsc && node build/main.js --deleteJson --language English",
		"del:json:spa": "tsc && node build/main.js --deleteJson --language Spanish",
		"imp:mongo:eng": "tsc && node build/main.js --uploadMongo single --language English",
		"imp:mongo:spa": "tsc && node build/main.js --uploadMongo single --language Spanish",
		"del:mongo:eng": "tsc && node build/main.js --deleteMongo --language English",
		"del:mongo:spa": "tsc && node build/main.js --deleteMongo --language Spanish",
		"imp:fire:eng": "tsc && node build/main.js --uploadFirestore single --language English",
		"imp:fire:spa": "tsc && node build/main.js --uploadFirestore single --language Spanish",
		"del:fire:eng": "tsc && node build/main.js --deleteFirestore --language English",
		"del:fire:spa": "tsc && node build/main.js --deleteFirestore --language Spanish"
	},
	"keywords": [
		"legal dictionary"
	],
	"author": "Iv√°n Ovejero",
	"license": "MIT",
	"dependencies": {
		"chalk": "^4.0.0",
		"cheerio": "^1.0.0-rc.3",
		"dotenv": "^8.2.0",
		"electron": "^8.2.5",
		"firebase": "^7.14.1",
		"json-stringify-pretty-compact": "^2.0.0",
		"mammoth": "^1.4.9",
		"minimist": "^1.2.5",
		"mongodb": "^3.5.6",
		"querystring": "^0.2.0"
	},
	"devDependencies": {
		"@fullhuman/postcss-purgecss": "^2.2.0",
		"@types/cheerio": "^0.22.17",
		"@types/faker": "^4.1.11",
		"@types/jest": "^25.2.1",
		"@types/minimist": "^1.2.0",
		"@types/mongodb": "^3.5.14",
		"@types/node": "^12.12.38",
		"autoprefixer": "^9.7.6",
		"cssnano": "^4.1.10",
		"electron-reload": "^1.5.0",
		"faker": "^4.1.0",
		"jest": "^25.4.0",
		"postcss-cli": "^7.1.1",
		"tailwindcss": "^1.4.6",
		"ts-jest": "^25.4.0",
		"tsc-watch": "^4.2.3",
		"typescript": "^3.8.3"
	}
}
